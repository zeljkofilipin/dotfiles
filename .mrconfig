# default

[DEFAULT]
lib = 
	 update_git_repository () {
	   git checkout master &&
	   git branch | grep -vE 'master' | xargs git branch -D &&
	   git pull origin master
	 }



# update homebrew and tools installed via homebrew

[/Users/z]
update = 
	 brew update &&
	 brew upgrade --all &&
	 diff .mrconfig Documents/github/zeljkofilipin/dotfiles/.mrconfig



# integration

[Documents/gerrit/integration/jenkins]
checkout = git clone 'https://gerrit.wikimedia.org/r/integration/jenkins.git' 'jenkins'
update = update_git_repository

[Documents/gerrit/integration/jenkins-job-builder]
checkout = git clone 'https://gerrit.wikimedia.org/r/integration/jenkins-job-builder.git' 'jenkins-job-builder'
update = 
	 if [ -d ~/Documents/gerrit/integration/jenkins-job-builder/output-parent ]; then rm -rv ~/Documents/gerrit/integration/jenkins-job-builder/output-parent; fi &&
	 if [ -d ~/Documents/gerrit/integration/jenkins-job-builder/output-proposed ]; then rm -rv ~/Documents/gerrit/integration/jenkins-job-builder/output-proposed; fi &&
	 update_git_repository

[Documents/gerrit/integration/jenkins-job-builder/config]
checkout = git clone 'https://gerrit.wikimedia.org/r/integration/config.git' 'config'
update = update_git_repository



