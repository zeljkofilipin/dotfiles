[DEFAULT]
lib =
	update_git_repository () {
		git checkout master &&
		git branch | grep -v \* | xargs git branch -D &&
		git pull origin master
	}
	install_ruby_gems () {
		cd tests/browser &&
		bundle
	}

[/Users/z]
update =
	rvm get stable &&
	gem update --system &&
	brew update &&
	brew upgrade

